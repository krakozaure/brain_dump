{
  "default": {
    "editor_args": ["-c", "norm G"],
    "file": "${HOME}/Documents/brain_dump/miscs.md",
    "template_file": "${HOME}/.config/brain_dump/templates/misc.tmpl"
  },
  "link": {
    "editor_args": ["-c", "norm G"],
    "file": "${HOME}/Documents/brain_dump/links.md",
    "template_file": "${HOME}/.config/brain_dump/templates/misc.tmpl"
  },
  "note": {
    "editor_args": ["-c", "norm G"],
    "file": "${HOME}/Documents/brain_dump/notes.md",
    "template_file": "${HOME}/.config/brain_dump/templates/note.tmpl"
  },
  "snip": {
    "editor_args": ["-c", "norm G2k", "-c", "startinsert"],
    "file": "${HOME}/Documents/brain_dump/snips.md",
    "formats": {
      "time": "15:04",
      "datetime": "2006-01-02 15:04"
    },
    "template_file": "${HOME}/.config/brain_dump/templates/snip.tmpl",
    "template_vars": {
      "category": "notes",
      "subcategory": "snippets"
    }
  },
  "todo": {
    "editor_args": ["-c", "norm G"],
    "file": "${HOME}/Documents/brain_dump/todos.md",
    "formats": {
      "time": "15:04",
      "datetime": "2006-01-02 15:04"
    },
    "template_file": "${HOME}/.config/brain_dump/templates/todo.tmpl"
  }
}
